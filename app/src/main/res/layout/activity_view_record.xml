<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header_tv_tbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="@string/temp_table"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dip" >

        <ListView
            android:id="@+id/listview_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/header_tv_tbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="@string/ph_table"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dip" >

        <ListView
            android:id="@+id/listview_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/header_tv_tbl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:text="@string/do_table"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dip" >

        <ListView
            android:id="@+id/listview_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableLayout>
   </LinearLayout>
</ScrollView>